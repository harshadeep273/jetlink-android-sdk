<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_incoming_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:gravity="left"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="@dimen/profile_photo"
        android:layout_height="@dimen/profile_photo"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ll_message"
        android:src="@drawable/profile_image_incoming" />


    <LinearLayout
        android:id="@+id/ll_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_profile"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_msg_incoming"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="testxxxxxxxxxxxxxxxxxxxxxxxxxxx"
            android:textColor="@color/message_incoming_text" />

        <TextView
            android:id="@+id/tv_mesage_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="2 mins ago"
            android:textColor="@color/message_date_text"
            android:textSize="8sp" />
    </LinearLayout>
</RelativeLayout>